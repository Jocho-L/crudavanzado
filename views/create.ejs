<%- include('./partials/header.ejs') %>

<div class="mt-3">
  <div class="alert alert-warning">
    <span>Complete los datos solicitados</span>
  </div>

  <!-- Formulario de creación de libro -->
  <form action="/create" id="formulario-registro" autocomplete="off" method="post">
    <div class="card">
      <div class="card-header"><span>Campos requeridos</span></div>
      <div class="card-body">

        <div class="row g-2">
          <div class="col-md-12 mb-2">
            <div class="form-floating">
              <select name="categoria" id="categoria" class="form-select" required>
                <option value="" selected disabled>Seleccione</option>
                <% categorias.forEach(categoria => { %>
                  <option value="<%= categoria.idcategoria %>"><%= categoria.categoria %></option>
                <% }) %>                
              </select>
              <label for="categoria" class="form-label">Categoría del libro</label>
            </div>
          </div>
        </div>

        <div class="row g-2">
          <div class="col-md-8 mb-2">
            <div class="form-floating">
              <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título del libro" required>
              <label for="titulo" class="form-label">Título del libro</label>
            </div>
          </div>
          <div class="col-md-2 mb-2">
            <div class="form-floating">
              <input type="text" class="form-control text-end" id="precio" name="precio" placeholder="Precio del libro" required>
              <label for="precio" class="form-label">Precio</label>
            </div>
          </div>
          <div class="col-md-2 mb-2">
            <div class="form-floating">
              <select name="tapa" id="tapa" class="form-select">
                <option value="B">Blanda</option>
                <option value="D" selected>Dura</option>
              </select>
              <label for="tapa" class="form-label">Tapa</label>
            </div>
          </div>
        </div>

        <div class="row g-2">
          <div class="col-md-12">
            <div class="form-floating">
              <textarea name="descripcion" id="descripcion" class="form-control"></textarea>
              <label for="descripcion" class="form-label">Descripción del libro</label>
            </div>
          </div>
        </div>

      </div> <!-- ./card-body -->
      <div class="card-footer text-end">
        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
        <a href="/" class="btn btn-sm btn-secondary">Cancelar </a>
      </div><!-- ./card-footer -->
    </div><!-- ./card -->
  </form>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const formulario = document.querySelector("#formulario-registro")

    formulario.addEventListener("submit", (event) => {
      event.preventDefault()

      Swal.fire({
        title:  'Librería',
        text:   '¿Está seguro de proceder?',
        icon:   'question',
        footer: 'Ingeniería de Software IA',
        confirmButtonText: 'Aceptar',
        confirmButtonColor: '#00A9A5',
        showCancelButton:   true,
        cancelButtonText:   'Cancelar'
      }).then((result) => {
        if (result.isConfirmed){
          formulario.submit()
        }
      })
    })
  })
</script>

<%- include('./partials/footer.ejs') %>
